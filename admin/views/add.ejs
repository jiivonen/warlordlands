<div class="form-container">
    <h2>Add New <%= displayName %></h2>

    <form method="POST" action="/admin/<%= tableName %>/add">
    <% columns.forEach(function(column) { %>
        <% if (column !== primaryKey && !column.includes('created_at') && !column.includes('updated_at')) { %>
            <div class="form-group">
                <label for="<%= column %>"><%= column %>:</label>
                <input type="text" id="<%= column %>" name="<%= column %>" class="form-control" required>
            </div>
        <% } %>
    <% }); %>
    
    <div style="margin-top: 2rem;">
        <button type="submit" class="btn btn-success">Add Record</button>
        <a href="/admin/<%= tableName %>" class="btn btn-primary">Cancel</a>
    </div>
    </form>
</div>
