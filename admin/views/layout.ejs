<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'Warlordlands Admin' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <% if (typeof title !== 'undefined' && title.includes('Commands')) { %>
    <script src="/js/commands.js"></script>
    <% } %>
</head>
<body>
    <div class="header">
        <h1>Warlordlands Admin Panel</h1>
    </div>
    
    <% if (typeof userNick !== 'undefined' && typeof hideNav === 'undefined') { %>
    <div class="nav">
        <a href="/admin">Dashboard</a>
        <a href="/admin/users">Admin Users</a>
        <a href="/admin/player">Players</a>
        <a href="/admin/realm">Realms</a>
        <a href="/admin/unit_type">Unit Types</a>
        <a href="/admin/keywords">Keywords</a>
        <a href="/admin/unit_classes">Unit Classes</a>
        <a href="/admin/terrain_types">Terrain Types</a>
        <a href="/admin/map">Map Tiles</a>
        <a href="/admin/army">Armies</a>
        <a href="/admin/unit">Units</a>
        <a href="/admin/game_turns">Game Turns</a>
        <a href="/admin/commands">Commands</a>

        <div class="user-info">
            <%= userNick %> <a href="/logout">Logout</a>
        </div>
    </div>
    <% } %>
    
    <div class="container">
        <div class="content">
            <%- body %>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
