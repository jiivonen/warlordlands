<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>üéÆ Game Turns Management</h1>
        <a href="/admin" class="btn btn-secondary">‚Üê Back to Admin</a>
    </div>

    <div class="mb-3">
        <a href="/admin/game_turns/add" class="btn btn-success">
            üöÄ Start New Turn
        </a>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">üìã Game Turns Overview</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Turn #</th>
                            <th>Status</th>
                            <th>Start Time</th>
                            <th>End Time</th>
                            <th>Command Deadline</th>
                            <th>Duration</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% turns.forEach(turn => { %>
                            <tr class="<%= turn.status === 'active' ? 'table-warning' : turn.status === 'completed' ? 'table-success' : 'table-light' %>">
                                <td>
                                    <strong>Turn <%= turn.turn_number %></strong>
                                </td>
                                <td>
                                    <% if (turn.status === 'active') { %>
                                        <span class="badge bg-warning text-dark">üîÑ Active</span>
                                    <% } else if (turn.status === 'completed') { %>
                                        <span class="badge bg-success">‚úÖ Completed</span>
                                    <% } else { %>
                                        <span class="badge bg-secondary">‚è≥ Pending</span>
                                    <% } %>
                                </td>
                                <td>
                                    <small class="text-muted">
                                        <%= new Date(turn.start_time).toLocaleDateString() %>
                                    </small><br>
                                    <strong><%= new Date(turn.start_time).toLocaleTimeString() %></strong>
                                </td>
                                <td>
                                    <small class="text-muted">
                                        <%= new Date(turn.end_time).toLocaleDateString() %>
                                    </small><br>
                                    <strong><%= new Date(turn.end_time).toLocaleTimeString() %></strong>
                                </td>
                                <td>
                                    <small class="text-muted">
                                        <%= new Date(turn.command_deadline).toLocaleDateString() %>
                                    </small><br>
                                    <strong><%= new Date(turn.command_deadline).toLocaleTimeString() %></strong>
                                </td>
                                <td>
                                    <% 
                                        const startTime = new Date(turn.start_time);
                                        const endTime = new Date(turn.end_time);
                                        const durationMs = endTime - startTime;
                                        const durationHours = Math.round(durationMs / (1000 * 60 * 60));
                                    %>
                                    <span class="badge bg-info"><%= durationHours %> hours</span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <% if (turn.status !== 'completed') { %>
                                            <a href="/admin/game_turns/edit/<%= turn.id %>" 
                                               class="btn btn-outline-primary btn-sm">
                                                ‚úèÔ∏è Edit
                                            </a>
                                        <% } else { %>
                                            <span class="text-muted">No actions available</span>
                                        <% } %>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
